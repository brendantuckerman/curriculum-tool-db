<div>
    <% if @priority.errors.any? %>
            <strong>Please corrrect the following:</strong>
            <ul>
                <% @priority.errors.full_messages.each do |e| %>
                    <li><%= e %></li>

                <% end %>
            </ul>

    <% end  %>



    <%= form_with model: @priority,  local: true do |f| %>

        <%= f.label :title %>
        <%= f.text_field :title %>

        <%= f.label :description %>
        <%= f.text_area :description %>

        <%= f.submit class:"button" %>

    <% end  %>

</div>